<Window x:Class="GUI.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ChangePassword" Height="500" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <materialDesign:Card
                Width="450"
                Margin="10"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Padding="8"
                Background="#FF5C99D6"
                Foreground="{DynamicResource PrimaryHueLightForegroundBrush}">
                <TextBlock
                    FontSize="30"
                    FontWeight="ExtraBold"
                    Text="ĐỔI MẬT KHẨU"
                    TextAlignment="Center"/>
            </materialDesign:Card>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <materialDesign:Card
                        Margin="5"
                        Width="auto"
                        Padding="auto"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryHueLightForegroundBrush}">
                        <TextBlock
                            x:Name="recoverLabel"
                            FontSize="16"
                            FontWeight="ExtraBold"
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            Text="Mật khẩu cũ" />
                    </materialDesign:Card>
                </Grid>

                <Grid Grid.Row="1">
                    <materialDesign:Card
                        Margin="5"
                        Width="auto"
                        Padding="auto"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryHueLightForegroundBrush}">
                        <TextBlock
                            FontSize="16"
                            FontWeight="ExtraBold"
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            Text="Mật khẩu mới" />
                    </materialDesign:Card>
                </Grid>

                <Grid Grid.Row="2">
                    <materialDesign:Card
                        Margin="5"
                        Width="auto"
                        Padding="auto"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryHueLightForegroundBrush}">
                        <TextBlock
                            x:Name="codeLabel"
                            FontSize="16"
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            FontWeight="ExtraBold"
                            Text="Mã xác nhận" />
                    </materialDesign:Card>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBox
                        x:Name="recoverText"
                        Margin="5 5 5 10"
                        VerticalAlignment="Center"
                        materialDesign:TextFieldAssist.HasClearButton="True" />
                </Grid>

                <Grid Grid.Row="1">
                    <PasswordBox
                        x:Name="newPassText"
                        Margin="5 5 5 10"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="New Password"
                        materialDesign:TextFieldAssist.HasClearButton="True" />
                </Grid>

                <Grid Grid.Row="2">
                    <TextBox 
                        x:Name="codeText"
                        Margin="5 5 5 10"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Verify Code"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        materialDesign:TextFieldAssist.HasClearButton="True"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="5">
                <Button
                    x:Name="out_Btn"
                    Width="150"
                    Content="THOÁT"
                    FontSize="15"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                     />
            </Grid>

            <Grid Grid.Column="1" Margin="5">
                <Button
                    x:Name="confirm_Btn"
                    Click="confirm_Btn_Click"
                    Width="150"
                    Content="_XÁC NHẬN"
                    FontSize="15"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                     />
            </Grid>

        </Grid>


        <Grid Grid.Row="3">
            <Button
                x:Name="resend_Btn"
                Click="resend_Btn_Click"
                Width="200"
                Content="GỬI LẠI MÃ"
                FontWeight="UltraBold"
                FontSize="20"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignFlatDarkButton}"
                />
        </Grid>
    </Grid>
</Window>
